        <main class="col-12 col-s-10">
            <section id="formulario">
                <div id="label" class="col-2">
                    <label for="inputIdActividad">Id Actividad</label><br>
                    <label for="inputNombreActividad">Nombre de Actividad</label><br>
                    <label for="inputFechaActividad">Fecha Actividad</label><br>
                    <label for="inputLugarActividad">Lugar Actividad</label><br>
                </div>
                <div id="campos" class="col-4">
                    <input type="number" name="IdActividad" id="inputIdActividad" required>
                    <input type="text" name="nombreUs" id="inputNombreActividad" required>
                    <input type="date" name="Fecha_Actividad" id="inputFechaActividad" required>
                    <input type="text" name="Lugar_Actividad" id="inputLugarActividad" required>
                </div>
            </section>
            <section id="botones">
                <div id="boton" class="col-4">
                    <input type="button" onclick="crearActividad()" value="Crear" id="botonCrear"/>
                    <input type="button" onclick="actualizarActividad()" value="Modificar" id="botonModificar"/>
                    <input type="button" onclick="eliminarUsuario(id_us)" value="Eliminar" id="botonEliminar"/>
                    <input type="button" onclick="limpiarCampos()" value="Limpiar Campos" id="botonLimpiar"/>
                </div>
            </section>
            <br>
            <section id="lista-ACTIVIDADES_LUDICAS">

            </section>
